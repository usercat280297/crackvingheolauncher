{
  "name": "game-launcher",
  "version": "1.0.0",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\" \"npm run dev:server\"",
    "dev:vite": "npx vite",
    "dev:electron": "npx wait-on http://localhost:5173 && npx electron .",
    "dev:server": "node server.js",
    "setup": "node setup.js",
    "build": "vite build && electron-builder",
    "build:cache": "node buildGameCache.js",
    "build:popular": "node buildPopularGames.js",
    "build:lua": "node buildCacheFromLua.js",
    "sync:games": "node resume-sync.js"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.22.1",
    "express-session": "^1.18.2",
    "fs-extra": "^11.3.3",
    "fuse.js": "^7.1.0",
    "jsonwebtoken": "^9.0.3",
    "lucide-react": "^0.300.0",
    "mongodb": "^6.3.0",
    "mongoose": "^8.0.0",
    "passport": "^0.7.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1",
    "smart-buffer": "^4.2.0",
    "socks": "^2.8.7",
    "webtorrent": "^2.8.5"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "vite": "^5.4.21",
    "wait-on": "^7.2.0"
  }
}
